@model InstruktorerPassMVC.Models.Pass

@{
    ViewData["Title"] = "Delete Pass";
}

<h2>Är du säker på att du vill radera vald aktivitet?</h2>
<br />
<h4>Aktivitet: @Html.DisplayFor(model => model.Pa_Id)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pa_Id)
        </dd>
        <dt>
            Aktivitet
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pa_Aktivitet)
        </dd>
    </dl>
</div>
<form asp-action="DeletePass">
    <input type="submit" value="Radera aktivitet" class="btn btn-danger" />
</form>
<br />
<div>
    <a asp-action="ReadAllaPass" class="btn btn-dark">Tillbaka</a>
</div>